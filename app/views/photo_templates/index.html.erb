<h1>List of photos</h1>

<hr>
<form action = "/insert_photo_record">
  <label for = "url_input">Image</label>
  <input id = "url_input" type = "text" name = "input_image" placeholder = "Enter a URL for the image...">

  <label for = "caption_input">Caption</label>
  <textarea id = "caption_input" name = "input_caption" placeholder = "Enter a caption for the photo..."></textarea>

  <label for = "owner_input">Owner ID</label>
  <input id = "owner_input" type = "text" name = "input_owner_id" placeholder = "Enter an ID of a User">

  <button>Add photo</button>
</form>
<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

<% @list_of_photos.each do |a_photo|%>
  <tr>
    <td>
      <img src="<%= a_photo.image%>">
    </td>

    <td>
      <%= a_photo.caption%>
    </td>

    <td>
      <%= a_photo.poster.username%>
    </td>

    <td>
      <%= a_photo.created_at%>
    </td>

    <td>
      <a href="/photos/<%= a_photo.id%>">
        Show details
      </a>
    </td>
  </tr>
  <%end%>
</table>
